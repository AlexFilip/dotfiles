#!/bin/sh

# Run the script
sudo -- "$HOME/bin/pvt/update-impl"

flatpak update --user -y
flatpak uninstall --unused -y

if [[ -n "$(which rustup)" ]]; then
    echo "Updating Rust"
    rustup update
fi

if [[ -n "$(which npx)" ]]; then
    echo "Updating npx"
    npx update -y
fi

if [[ -n "$(which npm)" ]]; then
    echo "Updating npm"
    npm update -g -y
fi


